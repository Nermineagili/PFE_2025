pipeline {
    agent any

    stages {
        // ------------------ Checkout ------------------
        stage('Checkout GitHub') {
            steps {
                git url: 'https://github.com/Nermineagili/PFE_2025.git', branch: 'main'
            }
        }

        // ------------------ Build Docker Images ------------------
        stage('Build Docker Images') {
            steps {
                // Backend: production image for deployment
                dir('backend') {
                    bat 'docker build -t app_assurance_backend:prod --target production .'
                }

                // Flask backend
                dir('flask-backend') {
                    bat 'docker build -t app_assurance_flask-backend .'
                }

                // Frontend
                dir('frontend') {
                    bat 'docker build -t app_assurance_frontend .'
                }
            }
        }

        // ------------------ Start Services ------------------
        stage('Start Services with Docker Compose') {
            steps {
                bat 'docker-compose up -d'
            }
        }

        // ------------------ Run Tests ------------------
stage('Run Tests') {
    steps {
        dir('backend') {
            // Build backend image with devDependencies
            bat 'docker build -t app_assurance_backend --target base .'

            // Ensure test-results folder exists on host
            bat 'if not exist test-results mkdir test-results'

            // Run tests with mapped volume
            bat '''
            docker run --rm ^
            -v %cd%/test-results:/app/test-results ^
            app_assurance_backend sh -c "mkdir -p /app/test-results && npx jest tests --ci --reporters=default --reporters=jest-junit || true"
            '''
        }
    }
    post {
        always {
            // Collect JUnit test results
            junit 'backend/test-results/jest-junit.xml'
        }
    }
}




        // ------------------ Deploy ------------------
        stage('Deploy') {
            steps {
                echo 'App deployed'
                // Optional: push Docker images to registry or other deployment steps
            }
        }
    }
}
